{
  "extends": ["@sapphire/ts-config", "@sapphire/ts-config/decorators", "@sapphire/ts-config/verbatim"],
  "compilerOptions": {
    "incremental": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "#client": ["shard"],
      "#constants/*": ["constants/*"],
      "#crosspost/*": ["crosspost/*"],
      "#data": ["data"],
      "#managers/*": ["managers/*"],
      "#services": ["services"],
      "#schemas/*": ["schemas/*"],
      "#structures/*": ["structures/*"],
      "#types/*": ["types/*"],
      "#utils/*": ["utils/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
