{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "#config": ["config"],
      "#client": ["AutoPublisher"],
      "#constants/*": ["constants/*"],
      "#crosspost/*": ["crosspost/*"],
      "#functions/*": ["functions/*"],
      "#handlers/*": ["handlers/*"],
      "#managers/*": ["managers/*"],
      "#schemas/*": ["schemas/*"],
      "#structures/*": ["structures/*"],
      "#types/*": ["types/*"],
      "#util/*": ["util/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
